<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<h2>Comments</h2>
<% @user.posts.each do |post| %> 
  <p>
    <strong>Post:</strong>
    <%= post.body %>
  </p>
<% end %>

<h2>Add a post:</h2>
<%= form_for ([@user, @user.posts.build])  do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
